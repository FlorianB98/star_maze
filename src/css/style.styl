*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background: black

.playBoutton{
  display:flex;
  justify-content: center;
  align-items: center;
  margin:0;
  position:relative;
  z-index: 1000;
  width : 15%;
  height:15%;
  background:  linear-gradient(rgb(000, 000, 000), rgb(255, 255, 240));
  cursor:pointer;
}
.playBoutton p{
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-family: 'Cookie', cursive;
  color:white;
}

.lvl{
  display:flex;
  justify-content: center;
  align-items: center;
  margin:0;
  left : 15px
  position:relative;
  z-index: 1000;
  width : 15%;
  height:15%;
  background: linear-gradient(rgb(000, 000, 000), rgb(255, 255, 240));
  cursor:pointer;
}
.lvl p{
  display:flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  font-family: 'Cookie', cursive;
  color:white;
}

.lvl:hover
  border: 3px solid white;



